{
  "name": "basket-swap",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "apps/libs/*"
    ]
  },
  "homepage": "https://calvinmaighan.github.io/",
  "scripts": {
    "prestart": "port-precheck 7000",
    "deploy": "gh-pages -d build",
    "native-web": "lerna run web --scope=native --stream",
    "web": "lerna run web --scope=web --stream",
    "prettier": "prettier --write src"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "git-format-staged": "^2.1.0",
    "husky": "^4.2.5",
    "lint-staged": ">=10",
    "prettier": "^2.0.5",
    "detect-port": "^1.3.0",
    "lerna": "^3.21.0",
    "port-precheck": "https://github.com/trycrypto/port-precheck"
  },
  "lint-staged": {
    "*.{js,jsx,css,md}": "prettier --write"
  }
}
